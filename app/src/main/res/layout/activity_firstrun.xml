<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@color/colorPrimary"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.faizmalkani.sunshine.SettingsActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="36sp"
            android:text="Where are you?"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display4"/>

        <EditText
            android:id="@+id/firstrun_city_name"
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/firstrun_done"
            android:layout_marginTop="56dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_action_done"
            android:textColor="@android:color/white"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
